 <script>
 function extValidation()
       {
         // alert('aa');
          var fileName = jQuery('[id$=inpfile]').val();
          var Extension=".csv";
          
         
          
         // alert('bbb');
          if(fileName.substr(fileName.length - Extension.length, Extension.length).toLowerCase()!=Extension)
          {
              Alert.render('Please choose <b>.csv</b> file only','Alert','OK');
              return false;
          }                    
       }
       
       function check(obj){ 
           var path = obj.value;
           var filesize= obj.files[0].size;
           if(filesize > 102400){
            obj.value = null;
            Alert.render('You cannot upload greater than 100kb file!','Alert','OK');
            return false;
           }
           }
 </script>
 
</apex:page>